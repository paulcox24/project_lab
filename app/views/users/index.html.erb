<h2>Users</h2>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'View User', user, class: 'btn btn-xs btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>