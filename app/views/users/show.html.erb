<h1><%= @user.name%></h1>
<p><%= @user.email%></p>
<p><%= @user.phone%></p>
<h2>Your Tasks</h2>
<table class='table'>
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Description</th>
      <th>Assigned to</th>
      <th>Task Creator</th>
      <th>Delivery Minutes</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= User.all.find(task.user_id).name %></td>
        <td><%= task.creator %></td>
        <td><%= task.delivery_minutes %></td>
        <td><%= task.is_completed? ? 'Completed' : "Not Complete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @user == current_user %>
<%= link_to 'Edit Account', edit_user_registration_path(@user), class: 'btn btn-default'%> 
<% end %> 
<%= link_to 'Back', users_path, class: 'btn btn-default' %>
