<h1><%= @project.name %></h1>
<h2>Owner: <%= @users.find(@project.user_id).name %></h2>

<h3>Description:</h3>
<p><%= @project.description %></p>

<h3>Due Date:</h3>
<p><%= @project.due_date_at.localtime.strftime("%A, %b %-d, %Y  %l:%M%p") %></p>



<h3>Project Tasks:</h3>
<hr>
  <% @tasks.each do |task| %>

  <p>
    <strong class="task_name"><%= task.name %></strong>
  <br>
    Created by: <%= @users.find(task.user_id).name%>
  <br>
    <%= simple_format(task.description, {class: 'task_description'}, sanitize: true) %>
  <br>
    Delivery Minutes: <%= task.delivery_minutes %><br> 
    Status: <%= task.is_completed ? 'Complete' : 'Incomplete' %>
  <br>
    <%= link_to 'Edit Task', edit_project_task_path(@project, task), class: "btn btn-default" %>
  </p>
  <hr>
<% end %>


<%= link_to 'Home', root_path, class: "btn btn-default" %>
<%= link_to 'Edit project', edit_project_path, class: "btn btn-default"  %>
<%= link_to 'Delete', @project, method: :delete, 
                                data: {
                                  confirm: 'Are you sure you want to delete this project?'}, class: "btn btn-default"  %>
<%= link_to 'Add New Task', new_project_task_path(@project), class: "btn btn-default"  %>
