<h1>User List</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Github</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_github_authorized? %>
            <i class="fa fa-github-alt"></i> <%= user.github_username %>
          <% end %>
        </td>
        <td><%= link_to 'View', user, class: 'btn btn-xs btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-xs btn-info' %></td>
        <td><%= link_to 'Delete', admin_user_path(user), 
                                  class: 'btn btn-xs btn-info',
                                  method: :delete,
                                  data: { 
                                          confirm: 'Are you sure you want to delete this project?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
<hr>
<%= link_to 'Add User', new_admin_user_path, class: 'btn btn-sm btn-primary' %>